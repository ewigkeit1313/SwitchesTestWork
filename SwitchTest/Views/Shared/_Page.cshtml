@model SwitchTest.Models.Page;

<div class="container">
    @if (Model.TotalPages > 0)
    {
        <ul class="pagination justify-content-end">
            
            @if (Model.CurrentPage > 1) 
            {
                <li class="page-item">
                    <a  class="page-link" asp-controller="Switch" asp-action="Index" asp-route-pageNum="1">&lt;&lt;</a>
                </li>
                <li>
                    <a  class="page-link" asp-controller="Switch" asp-action="Index" asp-route-pageNum="@(Model.CurrentPage - 1)">&lt;</a>
                </li>
            }
            
            @for (var p = Model.StartPage; p <= Model.EndPage; p++)
            {
                <li class="page-item @(p == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-controller="Switch" asp-action="Index", asp-route-pageNum="@p">@p</a>
                </li>
            }

            @if (Model.CurrentPage < Model.TotalPages)
            {
                <li class="page-item">
                    <a  class="page-link" asp-controller="Switch" asp-action="Index" asp-route-pageNum="@(Model.CurrentPage+1)">&gt;</a>
                </li>
                <li>
                    <a  class="page-link" asp-controller="Switch" asp-action="Index" asp-route-pageNum="@(Model.TotalPages)">&gt;&gt;</a>
                </li>
            }
        </ul>
    }
</div>